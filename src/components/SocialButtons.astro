---
import Github from "@/components/icons/Github.astro";
import Linkedin from "@/components/icons/Linkedin.astro";

interface Props{
    className?: string;
}

const { className } = Astro.props;
const socialButtonClasses = "h-12 w-12";
---

<div class={`${className}`}>
  <a href="https://github.com/joelmh-112" target="_blank" rel="noopener noreferrer" class="opacity-80 hover:opacity-100 transition-all ease-in-out duration-300">
    <Github className={socialButtonClasses} />
  </a>
  <a href="https://www.linkedin.com/in/joel-mart%C3%ADnez-hern%C3%A1ndez-b376302b6" target="_blank" rel="noopener noreferrer" class="opacity-80 hover:opacity-100 transition-all ease-in-out duration-300">
    <Linkedin className={socialButtonClasses} />
  </a>
</div>
