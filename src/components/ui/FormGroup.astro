---
interface Props {
  className?: string;
  label?: string;
  error?: string;
  id?: string;
}
const { className, label, error, id } = Astro.props;
---
<div class={`flex flex-col gap-2 ${className ?? ''}`}>
  {label && <label for={id} class="text-gray-300 font-semibold font-raleway">{label}</label>}
  <slot />
  {error && <span class="text-red-400 text-xs font-raleway">{error}</span>}
</div> 