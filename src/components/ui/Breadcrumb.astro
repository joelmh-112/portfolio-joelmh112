---
interface Props {
  className?: string;
  items: { label: string; href?: string }[];
}
const { className, items } = Astro.props;
---

<nav class={`flex items-center gap-2 text-sm font-raleway ${className ?? ""}`} aria-label="Breadcrumb">
  {
    items.map((item, idx) => (
      <>
        {item.href ? (
          <a href={item.href} class="text-primary hover:underline">
            {item.label}
          </a>
        ) : (
          <span class="text-gray-400">{item.label}</span>
        )}
        {idx < items.length - 1 && <span class="text-gray-500 mx-1">/</span>}
      </>
    ))
  }
</nav>

