---
import BrainLayout from "@/layouts/BrainLayout.astro";
import FormGroup from "../../components/ui/FormGroup.astro";
import Input from "../../components/ui/Input.astro";
import Button from "../../components/ui/Button.astro";
---
<BrainLayout title="Login">
  <div class="flex items-center justify-center min-h-screen bg-background">
    <form action="/login" method="POST" class="bg-gray-900 bg-opacity-80 p-8 rounded-xl shadow-lg flex flex-col gap-6 w-full max-w-sm border border-primary border-opacity-30">
      <h1 class="text-3xl font-oswald text-primary text-center mb-2">Iniciar sesión</h1>
      <FormGroup label="Email" id="email">
        <Input id="email" name="email" type="email" placeholder="tu@email.com" required />
      </FormGroup>
      <FormGroup label="Contraseña" id="password">
        <Input id="password" name="password" type="password" placeholder="••••••••" required />
      </FormGroup>
      <Button type="submit" className="w-full mt-2">Entrar</Button>
    </form>
  </div>
</BrainLayout>
