---
import Layout from "@/layouts/Layout.astro";
import Banner from "@/components/sections/Banner.astro";
import Projects from "@/components/sections/Projects.astro";
import Experience from "@/components/sections/Experience.astro";
import About from "@/components/sections/About.astro";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
---

<Layout title="JoelMH112 - Portfolio">
  <main class="text-white flex flex-col">
    <Navbar className="hidden lg:flex lg:justify-center lg:px-10" classNameContent="lg:max-w-[1500px] w-full" />
    <Banner className="lg:pt-36" />
    <Projects />
    <Experience />
    <About />
    <Footer className="flex flex-col items-center lg:px-10" classNameContent="lg:max-w-[1500px] w-full" />
  </main>
</Layout>
<style is:global>
  section {
    @apply px-6  py-10 lg:py-24 lg:px-10 w-full flex flex-col items-center;
  }

  section > .content {
    @apply lg:max-w-[1500px] w-full;
  }

  section:nth-child(odd) {
    @apply bg-gray-900;
  }
</style>
